class FlagAPI {
    static async loadFlags() {
        const response = await fetch('flags.json');
        return await response.json();
    }

    static async saveFlags(flags) {
        const response = await fetch('flags.json', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(flags, null, 4)
        });
        return response.ok;
    }
}

